<h2>会員一覧</h2>
<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customer.each do |customer| %>
      <tr>
        <th><%=customer.id %></th>
        <th>
          <%=link_to admin_customer_path(customer.id) do %>
            <%=customer.last_name %>
            <%=customer.first_name %>
          <%end%>
        </th>
        <th><%=customer.email %></th>
        <th>
          <% if customer.is_deleted %>
            有効
          <%else%>
          　退会
          <%end%>
        </th>
      </tr>
    <%end%>
  </tbody>
</table>
