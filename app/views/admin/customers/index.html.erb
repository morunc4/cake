<div class="container mt-5">
  <div class="col-md-9">
    <h4 class="bg-secondary col-2 text-white text-center">会員一覧</h4>
  </div>
  <div class="col-md-10 mx-auto">
    <table class="table">
      <thead>
        <tr class="bg-light">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customer.each do |customer| %>
          <tr>
            <td><%=customer.id %></td>
            <td>
              <%=link_to admin_customer_path(customer.id),class: "text-dark" do %>
                <%=customer.last_name+customer.first_name %>
              <%end%>
            </td>
            <td><%=customer.email %></td>
            <td>
              <% if customer.is_deleted %>
                <div class="text-success">有効</div>
              <%else%>
                <div class="text-secondary">退会</div>
              <%end%>
            </td>
          </tr>
        <%end%>
      </tbody>
    </table>
    <%= paginate @customer %>
  </div>
</div>