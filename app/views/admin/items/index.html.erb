<div class="container px-5 pt-5">
  <div class="row">
    <div class="col-md-12 mx-auto">
      <div class="row ">
        <div class="col-md-11">
          <h4 class="bg-secondary text-white px-4 col-md-2">商品一覧</h4>
        </div>
        <div class="float-right">
          <%=link_to new_admin_item_path do %>
          <button type="button" class="h4 btn btn-secondary rounded-circle p-0" style="width:3rem;height:3rem;">＋</button>
          <%end%>
        </div>
        
      </div>
      
     
      <table class="table">
        <thead class="thead-light">
          <tr>
  　         <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%=item.id %></td>
            <td>
              <div class="text-decoration-underline">
                <%=link_to admin_item_path(item.id),class: "text-dark text-decoration-underline" do %>
                  <%=item.name %>
                <%end%>
              </div>
            </td>
            <td><%=item.price.to_s(:delimited) %></td>
            <td>
              <%=item.genre.name %>
            </td>
            <td>
              <% if item.is_active %>
                <div class="text-success">販売中</div>
              <%else%>
                <div class="text-secondary">販売停止中</div>
              <%end%>
            </td>
          </tr>
        <%end%>
        </tbody>
      </table>
      <div class="col-2 mx-auto ">
        <%=paginate @items %>
      </div>
      
      
      
    </div>
      
  </div>
</div>