
<div class="container px-5 pt-5">
  <div class="row">
    <div class="col-md-10">
      <h4 class="bg-secondary w-25 text-white  pl-3">管理者ログイン</h4>
    </div>
    
    <div class="col-md-8 mx-auto">
        
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
        <div class="form-group mt-5">
          <div class="row">
          <label class="col-md-4 control-label">メールアドレス</label>
          <div class="col-md-7">
            <div class="mx-auto">
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control " %>
            </div>
          </div>
          </div>
        
          
        </div>
        
        <div class="form-group mb-5">
          <div class="row">
            <label class="col-md-4 control-label">パスワード</label>
            <div class="col-md-7">
              <div class="mx-auto">
                <%= f.password_field :password, autocomplete: "current-password",class: "form-control " %>
              </div>
              
            </div>
          </div>
        </div>
        
        
          <%= f.submit "ログイン",class: "btn btn-primary btn-block col-2 mx-auto " %>
        
        <% end %>
    <%= render "admin/shared/links" %>
    </div>
  </div>
</div>

