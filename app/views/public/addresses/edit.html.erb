<div class="container px-5 pt-5">
  <div class="col-md-9">
    <h4 class="bg-secondary col-3 text-white px-4 mb-5 text-center">配送先編集</h4>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%=form_with model: @address do |f| %>
      
        <div class="field mb-2">
          <div class="row">
            <div class="col-3 ">
              <label for="postal" class="h5 pt-3">郵便番号(ハイフンなし)</label>
            </div>
            <div class="col-4">
              <%=f.text_field :postal_code,class: "form-control form-control-lg",id: "postal" %>
            </div>
          </div>
        </div>
        
        <div class="field mb-2">
          <div class="row">
            <div class="col-3">
              <label for="address" class="h5 pt-3">住所</label>
            </div>
            <div class="col-7">
              <%=f.text_field :address,class: "form-control form-control-lg",id: "address" %>
            </div>
          </div>
        </div>
        
        <div class="field mb-2">
          <div class="row">
            <div class="col-3">
              <label for="name" class="h5 pt-3">宛名</label>
            </div>
            <div class="col-4">
              <%=f.text_field :name,class: "form-control form-control-lg",id: "name" %>
            </div>
            <div class="col-2"></div>
            <div class="col-3 mx-auto ml-5">
              <%=f.submit "変更内容を保存",class: "btn btn-success btn-lg col-10 " %>
            </div>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>