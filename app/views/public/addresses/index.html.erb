<div class="container px-5 pt-5">
  <div class="col-md-8">
    <h4 class="bg-secondary col-5 text-white px-4 mb-5 text-center">配送先登録 / 一覧</h4>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%=form_with model: @address do |f| %>
      
        <div class="field mb-2">
          <div class="row">
            <div class="col-3 ">
              <label for="postal" class="h5 pt-3">郵便番号(ハイフンなし)</label>
            </div>
            <div class="col-4">
              <%=f.text_field :postal_code,class: "form-control form-control-lg",id: "postal" %>
            </div>
          </div>
        </div>
        
        <div class="field mb-2">
          <div class="row">
            <div class="col-3">
              <label for="address" class="h5 pt-3">住所</label>
            </div>
            <div class="col-7">
              <%=f.text_field :address,class: "form-control form-control-lg",id: "address" %>
            </div>
          </div>
        </div>
        
        <div class="field mb-2">
          <div class="row">
            <div class="col-3">
              <label for="name" class="h5 pt-3">宛名</label>
            </div>
            <div class="col-4">
              <%=f.text_field :name,class: "form-control form-control-lg",id: "name" %>
            </div>
            <div class="col-3"></div>
            <div class="col-2 mx-auto ml-5">
              <%=f.submit "新規登録",class: "btn btn-success btn-lg col-12 " %>
            </div>
          </div>
        </div>
      <%end%>
    </div>
  </div>
  
  <table class="table col-md-10">
    <thead>
      <tr class="bg-light">
        <th class="col-2 border border-dark">郵便番号</th>
        <th class="col-5 border border-dark">住所</th>
        <th class="col-2 border border-dark">宛名</th>
        <th class="col-3 border border-dark"></th>
      </tr>
    </thead>
    
    <tbody>
      <% @customer.each do |address| %>
      <tr>
        <td class="border border-dark"><%=address.postal_code %></td>
        <td class="border border-dark"><%=address.address %></td>
        <td class="border border-dark"><%=address.name %></td>
        <td class="border border-dark">
          <%=link_to "編集する",edit_address_path(address.id),class: "btn btn-success" %>
          <%=link_to "削除する",address_path(address.id),method: :delete,class: "btn btn-danger" %>
        </td>
      </tr>
      <%end%>
    </tbody>
  </table>
</div>