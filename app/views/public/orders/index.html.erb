<div class="container px-5 pt-5">
  <div class="col-md-9">
    <h4 class="bg-secondary col-4 text-white px-0 mb-5 text-center">注文履歴一覧</h4>
  </div>
  <table class="table">
    <thead>
      <tr class="border border-dark bg-light">
        <td class="border border-dark bg-light ">注文日</td>
        <td class="border border-dark bg-light col-6">配送先</td>
        <td class="border border-dark bg-light ">注文商品</td>
        <td class="border border-dark bg-light ">支払金額</td>
        <td class="border border-dark bg-light ">注文詳細</td>
      </tr>
    </thead>
    <tbody>
      <% @order.each do |order| %>
        <tr class="border border-dark">
          <td class="border border-dark"><%=order.created_at.strftime('%Y/%m/%d') %></td>
          <td class="border border-dark">
            〒<%=order.delivery_postal_code %><br>
            <%=order.delivery_address %><br>
            <%=order.delivery_name %>
          </td>
          <td class="border border-dark">
            
            <% order.order_details.each do |order_detail| %>
              <%=order_detail.item.name %><br>
            <%end%>
          </td>
          <td class="border border-dark">
            <%=order.billing_amount.to_s(:delimited) %>円
          </td>
          <td class="border border-dark"><%=link_to "表示する",order_path(order.id),class: "btn btn-secondary" %></td>
        </tr>
      <%end%>
    </tbody>
  </table>
  
</div>